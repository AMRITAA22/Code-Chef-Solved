   "source": [
    "# cook your dish here\n",
    "t=int(input())\n",
    "for _ in range(t):\n",
    "    n,x=map(int,input().split())\n",
    "    ans=0\n",
    "    for i in range(x):\n",
    "        ans+=2**(n-i)\n",
    "    for i in range(n-x):\n",
    "        ans-=2**(i+1)\n",
    "    print(ans)"
   ]
