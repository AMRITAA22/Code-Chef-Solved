    "def solve():\n",
    "    d, x, y, z = map(int, input().split())\n",
    "    work_strategy_1 = x * 7\n",
    "    work_strategy_2 = y * d + z * (7 - d)\n",
    "    print(max(work_strategy_1, work_strategy_2))\n",
    "\n",
    "t = int(input())\n",
    "for _ in range(t):\n",
    "    solve()"
